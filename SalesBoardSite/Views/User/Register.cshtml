@model SalesBoardSite.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    /* General cyan theme and background */
    body {
        background-color: #e0f7fa; /* Light cyan background */
        font-family: 'Arial', sans-serif;
    }

    /* Main container to center the registration box */
    .register-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #80deea, #00bcd4); /* Cyan gradient */
    }

    /* Form card styling */
    .register-form {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

        /* Form field styling */
        .register-form .form-control {
            background-color: #e0f7fa;
            border: none;
            border-bottom: 2px solid #00acc1;
            border-radius: 0;
            box-shadow: none;
        }

            .register-form .form-control:focus {
                border-color: #00838f;
                box-shadow: none;
            }

        /* Submit and Register buttons */
        .register-form button {
            background-color: #00bcd4;
            color: white;
            border: none;
            width: 100%;
            padding: 10px;
            margin-top: 20px;
            border-radius: 5px;
        }

            .register-form button:hover {
                background-color: #00838f;
            }

        .register-form a.btn-primary {
            background-color: #00bcd4;
            color: white;
            border: none;
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            text-align: center;
            display: block;
            text-decoration: none;
        }

            .register-form a.btn-primary:hover {
                background-color: #00838f;
            }

    /* Typography adjustments */
    h2 {
        color: #004d40;
        margin-bottom: 20px;
    }

    .text-danger {
        color: #d32f2f;
    }
</style>

<div class="register-container">
    <div class="register-form">
        <h2 class="text-center mb-4">Register</h2>

        <form asp-controller="User" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text" class="form-control form-control-sm" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" class="form-control form-control-sm" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control form-control-sm" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword"></label>
                <input type="password" class="form-control form-control-sm" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-secondary btn-lg">Register</button>
            <a asp-controller="User" asp-action="Login" class="btn btn-primary btn-lg">Login</a>
        </form>
    </div>
</div>
